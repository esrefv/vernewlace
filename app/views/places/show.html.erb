Display Place
<br/><br/>
<li>
<b>Name:</b>	<%= @place.name %>
<b>Address</b>	<%= @place.address %>
<b>Phone Number:</b>	<%= @place.phone_number %>
<b>Contact Mail:</b>	<%= @place.contact_mail %>
<b>Established at:</b> <%= @place.established_at %>
<b>Description: </b> <%= @place.description %>
<b>Category: </b> <%= @place.category.name%>
</li>
<br/><br/>
<b>Comments</b>
<br/><br/>
<% @comments.each do |c| %>
	<li>
	<%= c.body %><br/><br/>
	</li>
<%end%>
<br/>

<%= form_for @comment do |f| %>
	<%= f.label :Comment%><br>
	<%= f.text_area :body, placeholder: 'comment', rows: 10 %><br><br>
	<%= f.hidden_field :place_id, :value => @place.id %>
	<%= f.submit 'Gonder'%>
<% end %>

<br/>
<%= link_to "Back to places list", places_path %>
<br/>
<% if current_owner.present? and current_owner.id == @place.owner_id %>
  <br/>
  <%= link_to "Edit place", edit_place_path(@place) %>
  <br/>
  <%= link_to "Delete place", place_path(@place), method: :delete, data:{confirm: "Emin misiniz?"} %>
<% end %>
<br/><br/><br/><br/>